@model IEnumerable<GestionEscolarAPP.Models.Estudiante.CalificacionModel>

@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewData["Title"] = "Notas de Estudiantes";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Notas de Estudiantes</h2>
    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Materia</th>
                    <th>Periodo 1</th>
                    <th>Periodo 2</th>
                    <th>Periodo 3</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any()) // Verificar si el modelo no es null y tiene elementos
                {
                    foreach (var calificacion in Model) // Iterar sobre el modelo
                    {
                        <tr>
                            <td>@calificacion.Materia</td>
                            <td>@calificacion.Periodo1</td>
                            <td>@calificacion.Periodo2</td>
                            <td>@calificacion.Periodo3</td>
                            <td>@calificacion.Total</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">No hay calificaciones disponibles.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

