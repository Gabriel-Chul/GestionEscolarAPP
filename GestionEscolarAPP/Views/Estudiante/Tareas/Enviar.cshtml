@model GestionEscolarAPP.Models.TareaEstudiante

@{
    ViewData["Title"] = "Enviar Tarea";
}

<h1>Enviar Tarea</h1>

<form asp-action="Enviar" method="post">
    <input type="hidden" name="tareaId" value="@ViewBag.Id" />
    <div class="form-group">
        <label for="comentario">Comentario (opcional):</label>
        <textarea name="comentario" class="form-control" id="comentario"></textarea>
    </div>
    <div class="form-group">
        <label for="enlace">Enlace:</label>
        <input type="text" name="enlace" class="form-control" id="enlace" required />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>